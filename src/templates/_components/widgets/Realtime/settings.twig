{% import "_includes/forms" as forms %}

{% set sourceOptions = [] %}
{% for source in sources %}
    {% set sourceOptions = sourceOptions|merge([{ label: source.name, value: source.id }]) %}
{% endfor %}

{{ forms.selectField({
    label: "Source"|t('analytics'),
    name: 'sourceId',
    class: 'source',
    options: sourceOptions,
    value: settings.sourceId
}) }}