{{ craft.analytics.register('src/main.js') }}
<p class="light">
    {% if currentUser.can('accessPlugin-analytics') %}
        {{ "Analytics is not configured. {settingsLink}"|t('analytics', { settingsLink: '<a href="{settingsUrl}">{settingsLabel}</a>.'|t('analytics', {settingsLabel: 'Edit plugin settings'|t('analytics'), settingsUrl: url('analytics/settings'), }) })|raw }}
